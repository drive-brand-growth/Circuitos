# Metroflex Events AI Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# n8n Configuration
# ========================================
N8N_USER=admin
N8N_PASSWORD=your_secure_password_here
N8N_HOST=your-domain.com
N8N_ENCRYPTION_KEY=your_random_encryption_key_min_32_chars

# ========================================
# Database (PostgreSQL)
# ========================================
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_postgres_password_here

# ========================================
# API Keys
# ========================================
# Get from: https://console.anthropic.com
CLAUDE_API_KEY=sk-ant-your-api-key-here

# Get from: GoHighLevel → Automations → Webhooks
GHL_WEBHOOK_URL=https://services.leadconnectorhq.com/hooks/your-webhook-id

# ========================================
# MinIO (File Storage)
# ========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here

# ========================================
# General Settings
# ========================================
TIMEZONE=America/Chicago

# ========================================
# Optional: Apify (if using their API instead of web scrapers)
# ========================================
APIFY_API_KEY=your_apify_api_key_here

# ========================================
# Optional: Email Services
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password_here

# ========================================
# Optional: Instagram (if doing direct API calls)
# ========================================
INSTAGRAM_ACCESS_TOKEN=your_instagram_token_here

# ========================================
# Security (generate with: openssl rand -hex 32)
# ========================================
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
