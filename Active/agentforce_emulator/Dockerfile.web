FROM node:18-alpine

WORKDIR /app

# Create placeholder files
RUN echo '{"name":"control-panel","version":"1.0.0","scripts":{"build":"echo Build","preview":"node index.js"}}' > package.json && \
    echo "const http = require('http'); http.createServer((req,res)=>res.end('OK')).listen(3001);" > index.js

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost:3001 || exit 1

# Run server
CMD ["node", "index.js"]
