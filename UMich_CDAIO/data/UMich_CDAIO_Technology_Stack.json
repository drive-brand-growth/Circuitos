      "team": {
        "frontend_developer": "1 (30 hours/week)",
        "ui_designer": "1 (10 hours/week)",
        "content_creator": "1 (20 hours/week, loads curriculum data)",
        "project_manager": "1 (5 hours/week)"
      },
      "deliverables": [
        "Dashboard with progress tracking",
        "4 pillar overview pages",
        "12 session player pages (with video embed placeholders)",
        "12 quizzes (10 questions each, 120 total)",
        "Capstone hub with templates",
        "Certificate generator (locked until completion)",
        "Mobile-responsive design",
        "Deployed to Netlify"
      ],
      "dependencies": [
        "Curriculum data (from analysis JSON files)",
        "Quiz questions (120 questions to write)",
        "Video content (placeholder until real videos available)",
        "Michigan branding assets (logo, colors, fonts)"
      ]
    },

    "phase_2_enhancements": {
      "scope": "Add GenAI module, MLOps session, hands-on labs, peer collaboration",
      "duration": "4 weeks",
      "deliverables": [
        "3 new GenAI sessions (LOS 4.5, 5.5, 6.5)",
        "1 new MLOps session (LOS 8.5)",
        "12 Colab notebooks (hands-on labs)",
        "Breakout room discussion prompts",
        "Updated quizzes for new sessions"
      ]
    },

    "phase_3_immersion": {
      "scope": "Build 5-day immersion content and schedule",
      "duration": "2 weeks",
      "deliverables": [
        "Immersion overview page",
        "Day-by-day schedule with activities",
