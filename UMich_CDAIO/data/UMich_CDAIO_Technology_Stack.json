{
  "technology_stack_recommendations": {
    "overview": "Build Michigan CDAIO replica as modern, mobile-responsive web application using existing CAIO University codebase as foundation",

    "frontend_stack": {
      "core_technologies": {
        "html": "HTML5 (semantic markup)",
        "css": "CSS3 with CSS Grid and Flexbox",
        "javascript": "Vanilla JavaScript ES6+ (no frameworks)",
        "rationale": "Keep it simple, fast, and maintainable. No build step needed."
      },
      "ui_framework": {
        "choice": "Pure CSS (no Bootstrap/Tailwind)",
        "approach": "Custom design system matching Michigan branding",
        "colors": {
          "primary": "#00274C (Michigan Blue)",
          "secondary": "#FFCB05 (Maize)",
          "accent": "#9A3324 (Michigan Red)",
          "neutral": "#F5F5F5, #FFFFFF, #333333"
        },
        "typography": {
          "headings": "Crimson Text or Libre Baskerville (academic feel)",
          "body": "Inter or Source Sans Pro (readability)"
        }
      },
      "responsive_design": {
        "breakpoints": {
          "mobile": "320px - 767px",
          "tablet": "768px - 1023px",
          "desktop": "1024px+"
        },
        "approach": "Mobile-first design with progressive enhancement"
      }
    },

    "data_layer": {
      "storage": {
        "curriculum_data": "JSON file (curriculum.json)",
        "quiz_data": "JSON file (quizzes.json)",
        "user_progress": "localStorage (client-side persistence)",
        "rationale": "No backend needed for MVP - static site with client-side state"
      },
      "data_structure": {
        "curriculum_json": {
          "structure": {
            "pillars": [
              {
                "pillar_id": 1,
                "title": "Foundations of Value Creation",
                "sessions": [
                  {
                    "los_id": 1,
                    "title": "AI Past, Present & Future I",
                    "date": "January 21, 2025",
                    "duration_minutes": 90,
                    "topics": ["..."],
                    "learning_objectives": ["..."],
                    "video_url": "https://vimeo.com/...",
                    "slides_url": "/assets/slides/los-1.pdf",
                    "readings": [
                      {"title": "...", "url": "...", "duration_min": 15}
                    ],
                    "quiz_id": "los-1-quiz",
                    "deliverable": {
                      "title": "...",
                      "description": "...",
                      "due_date": "..."
                    }
                  }
                ]
              }
            ],
            "immersion": {
              "days": [
                {
                  "day": 1,
                  "focus": "...",
                  "schedule": [...]
                }
              ]
            }
          }
        },
        "quizzes_json": {
          "structure": {
            "quizzes": [
              {
                "quiz_id": "los-1-quiz",
                "title": "LOS 1: AI Fundamentals Quiz",
                "passing_score": 80,
                "max_attempts": 2,
                "time_limit_minutes": 20,
                "questions": [
                  {
                    "question_id": 1,
                    "type": "multiple_choice",
                    "question": "...",
                    "options": ["A", "B", "C", "D"],
                    "correct_answer": 2,
                    "explanation": "...",
                    "bloom_level": "Understand"
                  }
                ]
              }
            ]
          }
        }
      }
    },

    "learning_platform_components": {
      "1_dashboard": {
        "url": "/index.html",
        "features": [
          "Overall progress (% completion)",
          "Next upcoming session (date, title)",
          "Quick links to all 4 pillars",
          "Certificate status (locked until completion)",
          "Capstone project status"
        ],
        "ui_elements": [
          "Progress circle (0-100%)",
          "4 pillar cards (clickable)",
          "Session calendar view",
          "Notifications (upcoming sessions, quiz results)"
        ]
      },
      "2_pillar_overview": {
        "url": "/pillar-[1-4].html",
        "features": [
          "Pillar description and objectives",
          "Session list with completion status",
          "Estimated time to complete",
          "Pillar completion badge"
        ],
        "ui_elements": [
          "Session cards (title, date, duration, status)",
          "Progress bar for pillar",
          "Lock/unlock indicators"
        ]
      },
      "3_session_player": {
        "url": "/session-[id].html",
        "features": [
          "Video player (Vimeo embedded)",
          "Tabbed content (Overview, Readings, Quiz, Deliverable)",
          "Learning objectives checklist",
          "Mark as complete button",
          "Previous/Next navigation"
        ],
        "ui_elements": [
          "Responsive video embed (16:9)",
          "Tab navigation",
          "Reading list with time estimates",
          "Quiz launch button"
        ]
      },
      "4_quiz_engine": {
        "url": "/quiz-[id].html",
        "features": [
          "Timed quiz (countdown timer)",
          "Multiple choice + scenario-based questions",
          "Immediate feedback on submission",
          "Score display (X/10, percentage)",
          "Attempt tracking (1 of 2)",
          "Explanations for all answers",
          "Retake button if failed"
        ],
        "ui_elements": [
          "Question counter (1 of 10)",
          "Timer display",
          "Radio buttons for answers",
          "Submit button",
          "Results modal (pass/fail, score, explanations)"
        ]
      },
      "5_capstone_hub": {
        "url": "/capstone.html",
        "features": [
          "Capstone requirements and rubric",
          "Template downloads (strategy doc, ROI model)",
          "Submission form (file upload placeholder)",
          "Example capstones (redacted)",
          "Faculty office hours calendar"
        ],
        "ui_elements": [
          "Rubric table (criteria, weight, description)",
          "Download buttons for templates",
          "Upload area (future implementation)",
          "Example showcase carousel"
        ]
      },
      "6_certificate_generator": {
        "url": "/certificate.html",
        "features": [
          "Unlocked after meeting requirements (10+ sessions + immersion + capstone)",
          "Personalized certificate with name",
          "Credential ID (UMICH-CDAIO-2025-XXXXXX)",
          "Digital badge for LinkedIn",
          "Download as PDF button",
          "Share to social media"
        ],
        "ui_elements": [
          "Certificate preview (Michigan branding)",
          "LinkedIn badge button",
          "Download PDF button",
          "Share buttons (LinkedIn, Twitter)"
        ]
      }
    },

    "video_platform": {
      "recommendation": "Vimeo Pro",
      "rationale": [
        "Better player than YouTube (no distractions)",
        "Privacy settings (restrict to domain)",
        "Customizable player (match branding)",
        "Analytics (view duration, engagement)",
        "Cost: $20/month for 5TB storage"
      ],
      "alternative": "YouTube (unlisted videos) - free but less professional",
      "implementation": "Embed Vimeo videos using iframe API for tracking watch time"
    },

    "quiz_engine_implementation": {
      "approach": "Custom JavaScript quiz engine (no third-party)",
      "features": [
        "Auto-grading (client-side)",
        "Immediate feedback",
        "Attempt tracking (localStorage)",
        "Timer with auto-submit",
        "Question randomization (optional)",
        "Answer explanations"
      ],
      "code_structure": {
        "quiz_engine_js": {
          "classes": [
            "QuizEngine (loads quiz data, manages state)",
            "QuizTimer (countdown with auto-submit)",
            "QuizResults (displays score, feedback)"
          ],
          "functions": [
            "loadQuiz(quizId)",
            "submitQuiz()",
            "calculateScore()",
            "displayResults()",
            "saveAttempt()",
            "canRetake()"
          ]
        }
      }
    },

    "progress_tracking": {
      "storage": "localStorage",
      "data_structure": {
        "user_progress": {
          "sessions_completed": ["los-1", "los-2"],
          "quizzes_passed": [
            {"quiz_id": "los-1-quiz", "score": 90, "attempts": 1, "date": "2025-01-22"}
          ],
          "capstone_status": "in_progress",
          "immersion_attendance": false,
          "certificate_earned": false,
          "total_hours_completed": 3
        }
      },
      "functions": [
        "markSessionComplete(sessionId)",
        "saveQuizResult(quizId, score, attempts)",
        "getOverallProgress() → percentage",
        "checkCertificateEligibility() → boolean"
      ]
    },

    "deployment": {
      "platform": "Netlify",
      "rationale": [
        "Free for static sites",
        "Auto-deploy from GitHub",
        "Custom domain support",
        "HTTPS included",
        "CDN for fast loading worldwide"
      ],
      "configuration": {
        "build_command": "None (static site)",
        "publish_directory": ".",
        "custom_domain": "cdaio.university or michigan-cdaio-replica.com"
      },
      "alternative": "Vercel, GitHub Pages, AWS S3 + CloudFront"
    },

    "content_delivery": {
      "videos": {
        "hosting": "Vimeo Pro",
        "embed": "Responsive iframe",
        "tracking": "Vimeo API for watch time"
      },
      "slides": {
        "format": "PDF",
        "hosting": "/assets/slides/",
        "viewer": "Browser native PDF viewer"
      },
      "readings": {
        "format": "External links (HBR, McKinsey) or PDF",
        "hosting": "/assets/readings/",
        "tracking": "Mark as read checkbox"
      },
      "code_labs": {
        "platform": "Google Colab (free, no setup)",
        "distribution": "Share links to public Colab notebooks",
        "student_workflow": "Click link → Make a copy → Complete exercises"
      }
    },

    "admin_dashboard": {
      "future_feature": "Faculty view to see student progress",
      "implementation": "Requires backend (Firebase, Supabase, or custom API)",
      "features": [
        "View all students and progress",
        "See quiz results",
        "Review capstone submissions",
        "Export data to CSV"
      ],
      "priority": "Phase 2 (not MVP)"
    }
  },

  "build_plan": {
