# Circuit OS - Environment Variables

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/circuitos
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Claude API
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Security
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# MCPs (Optional - for production integrations)
FIRECRAWL_API_KEY=
TAVILY_API_KEY=
BRAVE_API_KEY=
BRIGHTDATA_API_KEY=
EXA_API_KEY=
PERPLEXITY_API_KEY=

# Observability
PROMETHEUS_ENABLED=true
TRACING_ENABLED=false
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Vector Database (for RAG)
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=circuit_os_knowledge

# Knowledge Graph (for relationship queries)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ML Models
ML_MODEL_PATH=./models
AUTOML_ENABLED=true
MODEL_RETRAIN_THRESHOLD=50  # Min samples before retrain
