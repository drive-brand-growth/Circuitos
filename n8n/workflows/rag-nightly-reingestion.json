        "otherOptions": {}
      },
      "id": "slack-notify-success",
      "name": "Slack: Success Summary",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2.1,
      "position": [1420, 200],
      "credentials": {
        "slackApi": {
