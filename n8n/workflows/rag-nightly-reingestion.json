      "typeVersion": 1,
      "position": [760, 200]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=http://metroflex-ai:5001/api/rag/reingest/{{ $json.id }}",
        "options": {
          "timeout": 60000
        }
      },
